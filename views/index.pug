extends layout.pug

block header

    div(id="searchesList")

    form(name="searchForm" id="searchForm" data-bind="submit: submitSearch")
        input(name="searchString" type="text")
        button(type="submit") Submit

block left-column

    div(id="tags" data-bind="foreach: tags")
        div(class="tag")
            span(data-bind="text: name")
            input(
                type="checkbox"
                data-bind=`
                    checked: isSelected,
                    attr: {
                        'data-id': id,
                        'data-name': name,
                        'data-is-init-selected': isInitSelected
                    }`)
            span(data-bind="text: isSelected")

block right-column

    div(id="results" data-bind="foreach: currResults")
        div(class="result")
            span(class="title" data-bind="text: title")
            span(class="url" data-bind="text: url")
            span(class="summary" data-bind="text: summary")

    script(src="viewmodels.js")