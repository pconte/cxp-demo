extends layout.pug

block header
    h1 Knowledge Base UI
    br
    h3 Search
    form#search-form(
        name="searchForm"
        data-bind="submit: submitSearch"
        autocomplete="off"
    )
        div(style="display: inline-block;")
            input(
                name="searchString"
                type="text"
                data-bind=`
                    textInput: searchString,
                    event: {
                        keyup: suggestSearchString()
                    }
                `)
                //- Above: change event would be better than keyup event
                //- because user may paste text or select text and right-click delete
                //- which will not fire the keyup event.
                //- However, there appears to be an issue with the change event not firing.
            ul#suggestions(data-bind="foreach: suggestions")
                li
                    span(data-bind="text: suggestion")
                    | (
                    span(data-bind="text: count")
                    | )
        div(style="display: inline-block; vertical-align: top;")
            button(type="submit") Submit

block sidebar
    h3 Tags
    div#tags(data-bind="foreach: tags")
        div.tag
            input(
                type="checkbox"
                data-bind=`
                    checked: isSelected,
                    attr: {
                        'data-id': id,
                        'data-name': name,
                        'data-is-init-selected': isInitSelected
                    }
                `)
            span.name(data-bind="text: name")

block main
    h3 Results
    div#results(data-bind="foreach: currResults")
        div.result
            span.title(data-bind="text: title")
            span.url(data-bind="text: url")
            span.summary(data-bind="text: summary")
